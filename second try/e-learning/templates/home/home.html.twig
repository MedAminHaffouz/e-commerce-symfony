{% extends 'base.html.twig' %}

{% block title %}Accueil - INSATacademy{% endblock %}

{% block body %}
<header class="bg-primary text-white text-center py-5">
    <div class="container">
        <h1 class="display-5">Bienvenue sur INSATacademy</h1>
        <p class="lead">Plateforme éducative adaptative pour tous les niveaux</p>
        <a href="{{ path("app_login") }}" class="btn btn-light btn-lg mt-3">Commencer maintenant</a>
    </div>
</header>

<section class="py-5 bg-light">
    <div class="container text-center">
        <h2 class="mb-4">Espaces Utilisateurs</h2>
        <div class="row">
            <div class="col-md-4">
                <i class="fas fa-child fa-3x text-primary mb-3"></i>
                <h5>Espace Client</h5>
                <p>Cours, exercices, recommandations personnalisées</p>
            </div>
            <div class="col-md-4">
                <i class="fas fa-chalkboard-teacher fa-3x text-success mb-3"></i>
                <h5>Espace Formateur</h5>
                <p>Ajout de contenus, suivi des élèves</p>
            </div>
            <div class="col-md-4">
                <i class="fas fa-user-shield fa-3x text-danger mb-3"></i>
                <h5>Espace Admin</h5>
                <p>Gestion globale, statistiques, sécurité</p>
            </div>
        </div>
    </div>
</section>
<div class="container col-xxl-8 px-4 py-5">
    <div class="row flex-lg-row-reverse align-items-center g-5 py-5">
      <div class="col-10 col-sm-8 col-lg-6">
        <img src="images/books.jpg" class="d-block mx-lg-auto img-fluid" alt="Bootstrap Themes" width="700" height="500" loading="lazy">
      </div>
      <div class="col-lg-6">
        <h1 class="display-5 fw-bold lh-1 mb-3">Responsive left-aligned hero with image</h1>
        <p class="lead">Enrichissez votre apprentissage avec des formations avancées et spécialisées</p>
        <div class="d-grid gap-2 d-md-flex justify-content-md-start">
          <button type="button" class="btn btn-primary btn-lg px-4 me-md-2">Livre</button>
        </div>
      </div>
    </div>
  </div>


   <div class="container col-xxl-8 px-4 py-5">
    <div class="row flex-lg-row-reverse align-items-center g-5 py-5">
      
      <div class="col-lg-6">
        <h1 class="display-5 fw-bold lh-1 mb-3">Search and enjoy</h1>
        <p class="lead">Enrichissez votre apprentissage avec des formations avancées et spécialisées</p>
        <div class="d-grid gap-2 d-md-flex justify-content-md-start">
          <button type="button" class="btn btn-primary btn-lg px-4 me-md-2">Formation</button>
        </div>
      </div>
      <div class="col-10 col-sm-8 col-lg-6">
        <img src="images/formation.jpg" class="d-block mx-lg-auto img-fluid" alt="Bootstrap Themes" width="700" height="500" loading="lazy">
      </div>
    </div>
  </div>
{% endblock %}
