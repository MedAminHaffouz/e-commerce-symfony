{% extends 'base.html.twig' %}

{% block title %}Catalogue{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h2>Catalogue</h2>

        <form method="get" class="mb-4 row">
            <div class="col-md-3 mb-2">
                <input type="text" name="q" placeholder="Rechercher par titre" class="form-control" value="{{ searchQuery }}">
            </div>
            <div class="col-md-2 mb-2">
                <input type="number" name="minPrice" placeholder="Prix min" class="form-control" value="{{ minPrice }}">
            </div>
            <div class="col-md-2 mb-2">
                <input type="number" name="maxPrice" placeholder="Prix max" class="form-control" value="{{ maxPrice }}">
            </div>
            <div class="col-md-2 mb-2">
                <select name="type" class="form-control">
                    <option value="">Tous les types</option>
                    <option value="formation" {{ selectedType == 'formation' ? 'selected' }}>Formation</option>
                    <option value="book" {{ selectedType == 'book' ? 'selected' }}>EBook</option>
                </select>
            </div>
            <div class="col-md-2 mb-2">
                <select name="category" class="form-control">
                    <option value="">Toutes les cat√©gories</option>
                    {% for cat in allCategories %}
                        <option value="{{ cat }}" {{ selectedCategory == cat ? 'selected' : '' }}>
                            {{ cat }}
                        </option>
                    {% endfor %}
                </select>
            </div>
            <select name="sort" class="form-control mb-2">
                <option value="">Trier par</option>
                <option value="price_asc" {{ app.request.get('sort') == 'price_asc' ? 'selected' : '' }}>Prix croissant</option>
                <option value="price_desc" {{ app.request.get('sort') == 'price_desc' ? 'selected' : '' }}>Prix d√©croissant</option>
            </select>
            <div class="col-md-1 mb-2">
                <button type="submit" class="btn btn-primary w-100">üîç</button>
            </div>
        </form>


        <h3>Formations</h3>
        <div class="row">
            {% for formation in formations %}
                <div class="col-md-4 mb-3">
                    <div class="card p-3 shadow-sm">
                        <h5>{{ formation.title }}</h5>
                        <p>{{ formation.description[:100] ~ '...' }}</p>
                        <a href="{{ path('catalogue_formation_show', { id: formation.id }) }}" class="btn btn-primary">Voir</a>
                        <a href="{{ path('admin_catalogue_formation_edit', { id: formation.id }) }}" class="btn btn-warning">Modifier</a>
                        <form method="post" action="{{ path('admin_catalogue_formation_delete', { id: formation.id }) }}" style="display:inline-block;" onsubmit="return confirm('√ätes-vous s√ªr de vouloir supprimer cette formation ?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ formation.id) }}">
                            <button class="btn btn-danger">Supprimer</button>
                        </form>
                    </div>
                </div>
            {% else %}
                <p>Aucune formation trouv√©e.</p>
            {% endfor %}
        </div>


        <h3 class="mt-5">EBooks</h3>
        <div class="row">
            {% for ebook in ebooks %}
                <div class="col-md-4 mb-3">
                    <div class="card p-3 shadow-sm">
                        <h5>{{ ebook.title }}</h5>
                        <p>{{ ebook.description[:100] ~ '...' }}</p>
                        <a href="{{ path('catalogue_ebook_show', { id: ebook.id }) }}" class="btn btn-primary">Voir</a>
                        <a href="{{ path('admin_catalogue_book_edit', { id: book.id }) }}" class="btn btn-warning">Modifier</a>
                        <form method="post" action="{{ path('admin_catalogue_book_delete', { id: book.id }) }}" style="display:inline-block;" onsubmit="return confirm('√ätes-vous s√ªr de vouloir supprimer ce livre ?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ formation.id) }}">
                            <button class="btn btn-danger">Supprimer</button>
                        </form>
                    </div>
                </div>
            {% else %}
                <p>Aucun eBook trouv√©.</p>
            {% endfor %}
        </div>
    </div>
{% endblock %}
