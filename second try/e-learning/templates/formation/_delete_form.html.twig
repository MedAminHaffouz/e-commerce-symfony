<form method="post" action="{{ path('app_formation_delete', {'id': formation.id}) }}"
      onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette formation ?');"
      class="d-inline">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ formation.id) }}">
    <button class="btn btn-danger btn-sm" title="Supprimer la formation">
        <i class="bi bi-trash"></i> Supprimer
    </button>
</form>
