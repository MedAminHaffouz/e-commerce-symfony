{% extends 'dashboard/UserDashboard.html.twig' %}

{% block body %}
    <div class="container py-4" style="max-width: 600px;">
        <h1>Modifier la description Formateur</h1>

        <form method="post" action="{{ path('formateur_description_edit') }}">
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea id="description" name="description" rows="6" class="form-control">{{ description }}</textarea>
            </div>

            <button type="submit" class="btn btn-success">Enregistrer</button>
            <a href="{{ path('user_profile') }}" class="btn btn-secondary ms-2">Annuler</a>
        </form>
    </div>
{% endblock %}
