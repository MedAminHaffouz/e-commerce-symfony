        <h1 class="mb-4">üìä Mes Statistiques</h1>

        <!-- KPI Cards -->
        <div class="row mb-4">
            <div class="col-md-4">
                <div class="card text-center">
                    <div class="card-body">
                        <h5 class="card-title">Total Formations cr√©√©es</h5>
                        <p class="card-text display-6">{{ totalFormations }}</p>
